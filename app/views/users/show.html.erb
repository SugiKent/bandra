<%=render 'partial/navbar' %>
  
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-4">
        <div class="user-profile row-space-4 text-center">
          <% if @user.icons.present? %>
         
           

                                       <%= image_tag @user.icons[0].avatar.url() ,size: '150x150',class: "img-circle"%>
                                       
                                    <% else %>
                                    <% if @user == current_user %>
                                     <%=link_to user_icons_path(@user) do %>

           
                                      <%= image_tag 'avatar-default.png', size: '150x150'%>
                                      <% end %>

                                      <%else %>
                                       <%= image_tag 'avatar-default.png', size: '150x150'%>
                                       <% end %>
                                      
                                  <% end %>
          <br>
          <%=@user.nickname%>
          <%if current_user == @user %>
          <%=link_to edit_user_path(current_user) do %>
          <i class="fa fa-cog" aria-hidden="true"></i>
          <% end %>
          <% end %>

        </div>
        
<!-- send message ボタン -->
      <% if current_user != @user %>
        <div class="row-space-2 text-center">
          <%= link_to "メッセージを送る", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: 'post',class: "btn btn-danger btn-full" %>
        </div>
      <% end %>

        <div class="panel panel-default vertifications hidden-xs hidden-sm">
              <div class="panel-heading">
                認証ID
              </div>
              <div class="panel-body">
                <div id="ver-name">
                      <em>ユーザー名<em><br>
                      <%if @user.name%>
                       <%=@user.name%>
                       <% else %>
                       <%=@user.nickname%>
                       <% end %>
                    </div>
                    <br>
                    <div id="ver-email">
                      <em>メールアドレス<em>
                      <%=@user.email%>
                    </div>
                    <br>
              </div>
        </div>
      

      </div>

      <div class="user-text col-lg-6 col-md-8 col-sm-12 ">
        <div class="panel panel-default">
          <div class="panel-heading">
            <label>ユーザープロフィール</label>
          </div>
           <div class="panel-body profile">
             <label>自己紹介</label>
            <%=@user.profile %>
          </div>
           <div class="panel-body profile">
             <label>年齢</label>
            <%=@user.user_age %>
          </div>
          <div class="panel-body profile">
             <label>性別</label>
            <%=@user.gender %>
          </div>
           <div class="panel-body profile">
             <label>活動地域</label>
            <%=@user.basyo %>
          </div>
           <div class="panel-body profile">
             <label>ステータス</label>
            <%=@user.bandor %>
          </div>

         


           
           </div>
           </div>
         </div>

    </div>
  </div>
